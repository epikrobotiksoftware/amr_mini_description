<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="AmrRobot">
<xacro:property name="pi" value="3.14"/>
<!-- inertial-->
<xacro:include filename="$(find amr_mini_description)/urdf/urdf_include/common_properties.urdf.xacro"/>
  

  <xacro:macro name="lidar" params="name parent *origin">
      <joint name="${name}_joint" type="continuous">
          <xacro:insert_block name="origin"/>
          <parent link="${parent}"/>
          <child link="${name}_laser_link"/>
      </joint>

      <link name="${name}_laser_link">
          <visual>
              <geometry>
                <mesh filename="file://$(find amr_mini_description)/meshes/lidar.stl" scale="0.001 0.001 0.001"/>
              </geometry>
              <origin rpy="${pi} 0 -${pi/1.25}" xyz="-0.075 0.02 0"/>
            </visual>
            <collision>
              <geometry>
                <mesh filename="file://$(find amr_mini_description)/meshes/lidar.stl" scale="0.001 0.001 0.001"/>
              </geometry>
              <origin rpy="${pi} 0 -${pi/1.25}" xyz="-0.078 0 0"/>
            </collision>
            <inertial>
              <origin xyz="0 0 0" rpy="0 0 0" />
              <mass value="0.14" />
              <inertia ixx="0.0075" ixy="0.0" ixz="0.0" iyy="0.0085" iyz="0.0" izz="0.0085" />  
            </inertial>
      </link>

  <gazebo reference="${name}_laser_link">
        <material>Gazebo/Yellow</material>
    </gazebo>

   
    <gazebo reference="${name}_laser_link">
      <sensor type="ray" name="${name}_rplidar_sensor">
          <pose>0 0 0 0 0 0</pose>
          <always_on>true</always_on>
          <visualize>false</visualize>
          <update_rate>2</update_rate>
          <ray>
            <scan>
              <horizontal>
                <samples>270</samples>
                <resolution>1.00000</resolution>
                <min_angle>-1.45245</min_angle>
                <max_angle>2.7159</max_angle>
              </horizontal>
            </scan>
            <range>
              <min>0.120000</min>
              <max>20</max>
              <resolution>0.015000</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.01</stddev>
            </noise>
          </ray>
          <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_ray_sensor.so">
            <ros>
              <remapping>~/out:=${name}_amr_mini_laser</remapping>
            </ros>
              <output_type>sensor_msgs/LaserScan</output_type>
            <frame_name>${name}_laser_link</frame_name>
          </plugin>
        </sensor>
      </gazebo> 
  </xacro:macro>
</robot>